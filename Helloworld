using System;
using static System.Console;

namespace BrainCSharp
{
    class HelloWorld
    {
        // 프로그램 실행이 시작되는 
        static void Main(string[] args)
        {
            if(args.Length == 0)
            { 
            Console.WriteLine("Hello World!");
                return;
            }

            WriteLine("Hello, {0}!", args[0]);
        }
    }
}
